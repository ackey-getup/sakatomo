<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">プレイヤー情報編集</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%# 下記エラーメッセージ の表示 %>
        <%= render 'shared/error_messages', model: f.object %>
        <%# //上記エラーメッセージ の表示 %%>

        <div class="field">
          <%= f.label :image, "アイコン画像" %><br/>
          <%= f.file_field :image %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile %>
        </div>

        <div class="field">
          <%= f.label :position, "ポジション" %><br />
          <%= f.collection_select(:position_id, Position.all, :id, :name, {} ) %>
        </div>

        <div class="field">
          <%= f.label :play_style, "プレースタイル" %><br />
          <%= f.collection_select(:play_style_id, PlayStyle.all, :id, :name, {} ) %>
        </div>

        <div class="field">
          <%= f.label :play_experience, "プレー年数" %><br />
          <%= f.collection_select(:play_experience_id, PlayExperience.all, :id, :name, {} ) %>
        </div>

        <div class="field">
          <%= f.label :main_play_area, "プレー地域" %><br />
          <%= f.collection_select(:main_play_area_id, MainPlayArea.all, :id, :name, {} ) %>
        </div>

        <div class="actions">
          <%= f.submit "変更を保存", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>