<% if player.liked_by?(current_user) %>
  <%= link_to(play_like_path(player, player.likes.find_by(user_id: current_user.id)), method: :delete, remote: true, id: :"like-button-#{player.id}") do %>
       <i class="fa-lg fas fa-heart icon-btn liked"></i>いいね
   <% end %>
<% else %>
   <%= link_to(play_likes_path(player), method: :play, remote: true, id: :"like-button-#{player.id}") do %>
       <i class="fa-lg fas fa-heart icon-btn not-like"></i>
   <% end %>
<% end %>