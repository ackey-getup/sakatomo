<div class="card">
    <div class="card__body"> 
      <div class="card_left">
        <%= link_to "#{plays.title}@#{plays.place}", play_path(plays.id), class: :card__title%>
        <%= link_to plays.user.nickname, root_path, class: :card__user %>
        <%= "エリア：#{plays.area.name}" %><br/>
        <%="開催日時："%><%= l plays.published_at, format: :short %><%="~"%><br/>
        <%= "グラウンド：#{plays.ground_style.name}" %><br/><br/>
        <p class="card__summary">
          <%= "コメント：#{plays.detail}" %>
        </p>
        <p class="card__time">  
          <%="from "%><%= l plays.created_at, format: :short%>
        </p>
      </div>
      <div class="card__image">
        <% if plays.image.present?%>
          <%= image_tag plays.image %>
        <% end %>
      </div>
      <%#登録されたマップの表示%>
      <div class="card_map">
        <div id="map"></div>
        <script type="text/javascript">
          function initMap() {
            //#latitude,longitudeから位置を特定
            var test = { lat: <%= plays.latitude %>, lng: <%= plays.longitude %> };
            var map = new google.maps.Map(document.getElementById('map'), {
                      zoom: 14, 
                      center: test
                      });
            var transitLayer = new google.maps.TransitLayer();
            transitLayer.setMap(map);

            var contentString = '<%= plays.place %>';
            var infowindow = new google.maps.InfoWindow({
              content: contentString
            });

         //#Map上の指定した位置にピンを挿して表示する
            var marker = new google.maps.Marker({
                          position:test,
                          map: map,
                          title: contentString
                         });

            marker.addListener('click', function() {
              infowindow.open(map, marker);
            });
          }
        </script>
        <script async defer src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%=ENV['GOOGLEMAP_API_KEY']%>&callback=initMap"></script>    
      </div>
      <%#//上記登録されたマップの表示%>
    </div>
</div>